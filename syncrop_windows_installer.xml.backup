<project>
    <shortName>syncrop</shortName>
    <fullName>Syncrop</fullName>
    <version>1.000</version>
    <installerFilename>${product_shortname}-${platform_name}-installer.${platform_exec_suffix}</installerFilename>
    <readmeFile>/home/taaparthur/Documents/Syncrop/README.txt</readmeFile>
    <licenseFile>/home/taaparthur/Documents/Syncrop/LICENSE.txt</licenseFile>
    <leftImage>/home/taaparthur/Documents/Syncrop/icon.png</leftImage>
    <logoImage>/home/taaparthur/Documents/Syncrop/icon.png</logoImage>
    <splashImage>/home/taaparthur/Documents/Syncrop/icon.png</splashImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Syncrop GUI</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Syncrop</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>java</windowsExec>
                    <windowsExecArgs>-Xmx30M -jar SyncropGUI.jar</windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}\Jars</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/home/taaparthur/Documents/Syncrop/Windows/Jars</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>/home/taaparthur/Documents/Syncrop/Windows/Scripts</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Syncrop GUI</comment>
                    <name>Syncrop</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>java</windowsExec>
                    <windowsExecArgs>-Xmx30M -jar SyncropGUI.jar</windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}\Jars</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <postInstallationScript>${instaldir}\scripts\postInstall.bat</postInstallationScript>
    <postInstallationScriptArguments>${instaldir}</postInstallationScriptArguments>
    <preUninstallationScript>${windows_folder_program_files}\Scripts\prepareUninstall.bat</preUninstallationScript>
    <postUninstallerCreationActionList>
        <kill>
            <path>${installdir}\Jars</path>
        </kill>
    </postUninstallerCreationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <vendor>Realm Of Pi</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

